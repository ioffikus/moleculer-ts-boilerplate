{
  "compilerOptions": {
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es2017",
    "lib": [
      "es2017"
    ],
    "noImplicitAny": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist/src",
    "baseUrl": ".",
    "types": [
      "node",
      "jest"
    ],
    "typeRoots": [
      "./node_modules/@types/"
    ],
    "paths": {
      "src/*": [
        "src/*"
      ],
      "types/*": [
        "src/types/*"
      ]
    },
    "skipLibCheck": true
  },
  "include": [
    "**/src/**/*.ts",
    "**/tests/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "coverage",
    "certificates"
  ]
}
